{
  "alwaysThinkingEnabled": true,
  "env": {
    "MAX_MCP_OUTPUT_TOKENS": "100000"
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/skill-activation-prompt.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "Bash",
      "WebFetch",
      "mcp__context7",
      "mcp__deepwiki",
      "mcp__fetch",
      "mcp__playwright"
    ],
    "deny": [
      "Bash(rm -rf /:*)"
    ]
  }
}
